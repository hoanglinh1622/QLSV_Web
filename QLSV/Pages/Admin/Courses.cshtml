@page
@model StudentManagement.Pages.Admin.CoursesModel
@{
    ViewData["Title"] = "Quản lý Khóa học";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    .card-header {
        background: #f8f9fa;
        font-weight: 600;
    }

    .btn-toggle {
        transition: transform 0.15s ease;
    }

    .btn-toggle:hover {
        transform: scale(1.2);
    }

    .badge-status {
        font-size: 0.9rem;
        padding: 0.4em 0.7em;
        border-radius: 10px;
    }

    .table th {
        white-space: nowrap;
    }

    .page-header {
        background: linear-gradient(90deg, #16a085, #2ecc71);
        color: white;
        border-radius: 12px;
        padding: 1.5rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-header h2 {
        margin: 0;
        font-weight: 700;
    }

    .page-header p {
        margin: 0;
        opacity: 0.85;
    }

    .btn-custom {
        border-radius: 10px;
        font-weight: 500;
    }

    .table-hover tbody tr:hover {
        background-color: #f1fdf5;
    }

    .modal-header {
        background-color: #2ecc71;
        color: white;
    }

    .modal-footer button {
        border-radius: 8px;
    }
</style>

<div class="container mt-4">

    <!-- Header -->
    <div class="page-header mb-4">
        <div>
            <h2><i class="bi bi-journal-bookmark-fill me-2"></i>Quản lý Khóa học</h2>
            <p>Xem, thêm, sửa và xóa thông tin khóa học</p>
        </div>
        <div>
            <a asp-page="/Admin/Dashboard" class="btn btn-light btn-custom me-2">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>
            <button type="button" class="btn btn-success btn-custom" data-bs-toggle="modal" data-bs-target="#createModal">
                <i class="bi bi-plus-circle"></i> Thêm khóa học
            </button>
        </div>
    </div>

   @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success alert-dismissible fade show mt-3">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }



    <!-- Courses Table -->
    <div class="card shadow-sm">
        <div class="card-header">
            <i class="bi bi-list-task me-2 text-success"></i>Danh sách Khóa học (@Model.Courses.Count)
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Mã khóa học</th>
                            <th>Tên khóa học</th>
                            <th>Giảng viên</th>
                            <th>Tín chỉ</th>
                            <th>Số lượng</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model.Courses)
                        {
                            <tr>
                                <td>@course.CourseCode</td>
                                <td>@course.CourseName</td>
                                <td>@course.Instructor</td>
                                <td>@course.Credits</td>
                                <td>@course.EnrolledStudents / @course.MaxStudents</td>
                                <td>
                                    <form method="post" asp-page-handler="ToggleStatus" class="d-inline">
                                        <input type="hidden" name="id" value="@course.Id" />
                                        <button type="submit" class="btn btn-sm border-0 bg-transparent btn-toggle" title="Đánh dấu Hoàn thành / Chưa hoàn thành">
                                            @if (course.IsCompleted)
                                            {
                                                <i class="bi bi-toggle-on text-success fs-3"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-toggle-off text-secondary fs-3"></i>
                                            }
                                        </button>
                                    </form>

                                    @if (course.IsCompleted)
                                    {
                                        <span class="badge bg-success badge-status">
                                            <i class="bi bi-check-circle"></i> Hoàn thành
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark badge-status">
                                            <i class="bi bi-clock-history"></i> Chưa hoàn thành
                                        </span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary me-1" data-bs-toggle="modal" data-bs-target="#editModal@(course.Id)">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                    <form method="post" asp-page-handler="Delete" class="d-inline">
                                        <input type="hidden" name="id" value="@course.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bạn có chắc muốn xóa?')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>

                           <!-- Edit Modal -->
                            <div class="modal fade" id="editModal@(course.Id)" tabindex="-1">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <form method="post" asp-page-handler="UpdateCourse">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Sửa thông tin khóa học</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <input type="hidden" name="NewCourse.Id" value="@course.Id" />
                                                <input type="hidden" name="NewCourse.EnrolledStudents" value="@course.EnrolledStudents" />

                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <label class="form-label">Mã khóa học</label>
                                                        <input type="text" name="NewCourse.CourseCode" class="form-control" value="@course.CourseCode" required />
                                                    </div>
                                                    <div class="col-md-6 mb-3">
                                                        <label class="form-label">Tên khóa học</label>
                                                        <input type="text" name="NewCourse.CourseName" class="form-control" value="@course.CourseName" required />
                                                    </div>
                                                </div>

                                                <div class="mb-3">
                                                    <label class="form-label">Mô tả</label>
                                                    <textarea name="NewCourse.Description" class="form-control" rows="3">@course.Description</textarea>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-4 mb-3">
                                                        <label class="form-label">Giảng viên</label>
                                                        <input type="text" name="NewCourse.Instructor" class="form-control" value="@course.Instructor" required />
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <label class="form-label">Tín chỉ</label>
                                                        <input type="number" name="NewCourse.Credits" class="form-control" value="@course.Credits" required />
                                                    </div>
                                                    <div class="col-md-4 mb-3">
                                                        <label class="form-label">Số lượng tối đa</label>
                                                        <input type="number" name="NewCourse.MaxStudents" class="form-control" value="@course.MaxStudents" required />
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <label class="form-label">Ngày bắt đầu</label>
                                                        <input type="date" name="NewCourse.StartDate" class="form-control" value="@course.StartDate.ToString("yyyy-MM-dd")" required />
                                                    </div>
                                                    <div class="col-md-6 mb-3">
                                                        <label class="form-label">Ngày kết thúc</label>
                                                        <input type="date" name="NewCourse.EndDate" class="form-control" value="@course.EndDate.ToString("yyyy-MM-dd")" required />
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <div class="form-check">
                                                            <input type="checkbox" name="NewCourse.IsActive" class="form-check-input" value="true" @(course.IsActive ? "checked" : "") />
                                                            <label class="form-check-label">Khóa học đang mở đăng ký</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 mb-3">
                                                        <div class="form-check">
                                                            <input type="checkbox" name="NewCourse.IsCompleted" class="form-check-input" value="true" @(course.IsCompleted ? "checked" : "") />
                                                            <label class="form-check-label">Khóa học đã hoàn thành</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="AddCourse">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm khóa học mới</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Mã khóa học</label>
                            <input type="text" name="NewCourse.CourseCode" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tên khóa học</label>
                            <input type="text" name="NewCourse.CourseName" class="form-control" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mô tả</label>
                        <textarea name="Course.Description" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Giảng viên</label>
                            <input type="text" name="NewCourse.Instructor" class="form-control" required />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Tín chỉ</label>
                            <input type="number" name="NewCourse.Credits" class="form-control" value="3" required />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Số lượng tối đa</label>
                            <input type="number" name="NewCourse.MaxStudents" class="form-control" value="30" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Ngày bắt đầu</label>
                            <input type="date" name="NewCourse.StartDate" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Ngày kết thúc</label>
                            <input type="date" name="NewCourse.EndDate" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-success">Thêm khóa học</button>
                </div>
            </form>
        </div>
    </div>
</div>